{
  "version": "0.19.3",
  "core": {
    "chunkSize": 75,
    "chunkOverlap": 10,
    "concurrency": 4,
    "embeddingBatchSize": 50
  },
  "chunking": {
    "useAST": true,
    "astFallback": "line-based"
  },
  "mcp": {
    "port": 7133,
    "transport": "stdio",
    "autoIndexOnFirstRun": true
  },
  "gitDetection": {
    "enabled": true,
    "pollIntervalMs": 10000
  },
  "fileWatching": {
    "enabled": true,
    "debounceMs": 1000
  },
  "complexity": {
    "enabled": true,
    "thresholds": {
      "testPaths": 15,
      "mentalLoad": 15,
      "timeToUnderstandMinutes": 60,
      "estimatedBugs": 1.5
    }
  },
  "frameworks": [
    {
      "name": "nodejs",
      "path": ".",
      "enabled": true,
      "config": {
        "include": [
          "**/*.ts",
          "**/*.tsx",
          "**/*.js",
          "**/*.jsx",
          "**/*.vue",
          "**/*.mjs",
          "**/*.cjs",
          "**/*.md",
          "**/*.mdx"
        ],
        "exclude": [
          "**/node_modules/**",
          "node_modules/**",
          "**/vendor/**",
          "vendor/**",
          "**/dist/**",
          "dist/**",
          "**/build/**",
          "build/**",
          "**/public/build/**",
          "public/build/**",
          "out/**",
          ".next/**",
          ".nuxt/**",
          ".vite/**",
          ".lien/**",
          "coverage/**",
          "playwright-report/**",
          "test-results/**",
          "__generated__/**",
          ".cache/**",
          ".turbo/**",
          ".vercel/**",
          ".netlify/**",
          "**/*.min.js",
          "**/*.min.css",
          "**/*.bundle.js"
        ]
      }
    },
    {
      "name": "nodejs",
      "path": "packages/action",
      "enabled": true,
      "config": {
        "include": [
          "**/*.ts",
          "**/*.tsx",

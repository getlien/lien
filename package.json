{
  "name": "lien-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Lien - Local semantic code search for AI assistants",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getlien/lien.git"
  },
  "homepage": "https://lien.dev",
  "bugs": {
    "url": "https://github.com/getlien/lien/issues"
  },
  "workspaces": [
    "packages/core",
    "packages/review",
    "packages/cli",
    "packages/action",
    "packages/app",
    "packages/site"
  ],
  "scripts": {
    "build": "npm run build -w @liendev/core && npm run build -w packages/cli",
    "build:core": "npm run build -w @liendev/core",
    "dev": "npm run dev -w packages/cli",
    "typecheck": "npm run build -w @liendev/core && npm run typecheck -w packages/cli",
    "clean": "rm -rf packages/*/dist",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish --provenance",
    "docs:dev": "npm run docs:dev -w packages/site",
    "docs:build": "npm run docs:build -w packages/site",
    "docs:preview": "npm run docs:preview -w packages/site"
  },
  "keywords": [
    "mcp",
    "semantic-search",
    "codebase",
    "ai",
    "cursor",
    "code-intelligence",
    "vector-search",
    "local-first"
  ],
  "author": "Alf Henderson",
  "license": "AGPL-3.0-only",
  "engines": {
    "node": ">=22.21.0"
  },
  "dependencies": {
    "@liendev/core": "*",
    "apache-arrow": "^18.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8"
  }
}
